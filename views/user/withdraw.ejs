<%- include("../partials/user/header") %>

<style>
    body {
        color: #000 !important;
    }
</style>
<h3>Ask for withdrawal:</h3><br>
    <table cellspacing=0 cellpadding=2 border=0>
        <tr>
            <th>Plan</th>
            <th>Amount</th>
            <th>Withdraw Status</th>
        </tr>
        <% if(user.deposit.length >= 0 ){ %>
            <% user.deposit.forEach(each =>{ %>
                <% if(each.status == "Confirmed"){ %>
                    <tr>
                        <td><%= each.plan %></td>
                        <td>$<%= each.amount %>+</td>
                        
                            <!-- <td><a style="background-color:white" href="/withdraw/<%= each._id %>"><button> Make Withdrawal</button></a></td> -->
                            
                        <td><button style="color:darkred"><%= each.status %></button></td> 
                    </tr>
                    <tr>
                        <td><button>Ask for withdrawal</button>
                            <br><br>
                            Withdraw with Bitcoin Address
                            <input type="text" name="bitcoin" value="<%= each.bitcoin %>" placeholder="<%= each.bitcoin %>">
                            <button class="btn btn-sm btn-success">Proceed</button><br><br>
                            <h3>OR</h3><br>
                            Withdraw with Bank
                            <input type="text" name="bankAccountNumber" value="<%= each.bankAccountNumber%>" placeholder="Account number --REQUIRED" required>
                            <input type="text" name="bankName" value="<%= each.bankName %>" placeholder="Bank name --REQUIRED" required>
                            <input type="text" name="routingNumber" value="<%= each.routingNumber %>" placeholder="Routing Number --REQUIRED" required>
                            <input type="text" name="swiftCode" value="<%= each.swiftCode %>" id="" placeholder="Swift Code --OPTIONAL">
                            <button class="btn btn-sm btn-success">Proceed</button><br><br>
                            
                        </td>
                    </tr>

                <% }else{ %>
                    <br><br>
                    You have no funds to withdraw.   
                <% } %>
                
            <% }) %>
        <% } else{ %>
            You have no funds to withdraw.    
        <% }%>

    </table>

</div>
<div class="clearfix"></div>
</div>
</div>


</div>

<%- include("../partials/user/footer") %>